{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },

  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "semi": [2, "never"],
    "curly": "error",
    "no-unused-vars": "error",
    "react/display-name": "off",
    "react/prop-types": "off"
  },
  "ignorePatterns": ["build/", "dist/", "node_modules/"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
